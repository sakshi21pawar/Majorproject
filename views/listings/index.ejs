<% layout("layouts/boilerplate") %>

<style>
  /* Filters row */
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0 2rem 0;
    justify-content: center;
  }

  .filter {
    text-align: center;
    padding: 0.8rem;
    border-radius: 10px;
    transition: all 0.3s ease;
    opacity: 0.7;
    min-width: 70px;
  }

  .filter:hover {
    opacity: 1;
    transform: translateY(-3px);
    background: #f8f9fa;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.4rem;
  }

  /* Tax toggle */
  .tax-toggle {
    border: 1px solid #ddd;
    border-radius: 1rem;
    padding: 0.6rem 1rem;
    display: flex;
    align-items: center;
    font-size: 0.9rem;
  }

  /* Listing cards */
  .listing-card {
    border: none;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
  }

  .listing-card:hover {
    transform: translateY(-4px);
  }

  .listing-card img {
    height: 20rem;
    object-fit: cover;
  }

  .card-body {
    padding: 0.8rem 1rem;
  }

  .card-text b {
    font-size: 1rem;
  }

  .tax-info {
    display: none;
    font-size: 0.8rem;
    color: #6c757d;
  }
</style>

<!-- Filters -->
<div id="filters">
  <div class="filter"><i class="fa-solid fa-fire fa-lg"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-bed fa-lg"></i><p>Rooms</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city fa-lg"></i><p>Iconic Cities</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-sun fa-lg"></i><p>Mountains</p></div>
  <div class="filter"><i class="fa-brands fa-fort-awesome fa-lg"></i><p>Castles</p></div>
  <div class="filter"><i class="fa-solid fa-person-swimming fa-lg"></i><p>Arctic</p></div>
  <div class="filter"><i class="fa-solid fa-tents fa-lg"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-solid fa-tractor fa-lg"></i><p>Farms</p></div>
  <div class="filter"><i class="fa-solid fa-umbrella-beach fa-lg"></i><p>Beach</p></div>
  <div class="filter"><i class="fa-solid fa-igloo fa-lg"></i><p>Domes</p></div>
  <div class="filter"><i class="fa-solid fa-ship fa-lg"></i><p>Boats</p></div>

  <!-- Tax Toggle -->
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="container">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 ">
    <% for(let listing of allListings){ %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
          <div class="card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image">
            <div class="card-body">
              <p class="card-text"> 
                <b><%= listing.title %></b><br>
                &#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night
                <i class="tax-info"> &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>

<!-- Tax Toggle Script -->
<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
</script>
